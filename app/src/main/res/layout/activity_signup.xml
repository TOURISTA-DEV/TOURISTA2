<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    >


    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_txtview_signup"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layoutDirection="inherit"
        android:layout_below="@+id/imageView"
        android:textColorHint="#bebebe"

        android:layout_marginTop="20dp"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:layout_centerHorizontal="true"
        >


    <EditText
        android:inputType="text"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/name_txtview_signup1"
        android:hint = "Your Name"
        android:focusable = "true"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint = "#94ffeded"
        android:textColor="@color/colorAccent"
        android:layout_marginTop = "46dp"
        android:textSize="@dimen/phone_text_size_login_"
        android:layout_below = "@+id/imageView"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_txtview_signup"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layoutDirection="inherit"
        android:layout_below="@+id/name_txtview_signup"
        android:textColorHint="#bebebe"

        android:layout_marginTop="2dp"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:layout_centerHorizontal="true"
        >
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/email_txtview_signup1"
        android:hint = "Your email"
        android:focusable = "true"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint = "#94ffeded"
        android:textColor="@color/colorAccent"
        android:layout_marginTop = "20dp"
        android:textSize="@dimen/phone_text_size_login_"
        android:layout_below = "@+id/name_txtview_signup"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/login_logo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:paddingTop="70dp"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/editText2"-->
        <!--android:text="Dont have account?"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:layout_below="@+id/editText"-->
