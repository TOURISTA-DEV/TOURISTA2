<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    >





    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_txtview_signup"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layoutDirection="inherit"
        android:layout_below="@+id/imageView"
        android:textColorHint="#bebebe"

        android:layout_marginTop="20dp"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:layout_centerHorizontal="true"
        >


        <EditText
            android:inputType="textPassword"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/password_txtview_signup1"
            android:hint = "Enter Password"
            android:focusable = "true"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint ="#ff0000"
            android:textColor="@color/colorAccent"
            android:layout_marginTop = "46dp"
            android:textSize="@dimen/phone_text_size_login_"
            android:layout_below = "@+id/imageView"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_txtview_signup"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layoutDirection="inherit"
        android:layout_below="@+id/name_txtview_signup"
        android:layout_marginTop="20dp"
        android:textColorHint="#bebebe"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:inputType="textPassword"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/confirm_password_txtview_signup1"
            android:hint = "Confirm Password"
            android:focusable = "true"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint = "#94ffeded"
            android:textColor="@color/colorAccent"
            android:layout_marginTop = "20dp"
            android:textSize="@dimen/phone_text_size_login_"
            android:layout_below = "@+id/name_txtview_signup"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/signup_progressBar"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_above="@+id/done_btn_forgot_password2_xml"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/login_logo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:paddingTop="70dp"/>






    <Button
        android:layout_width="@dimen/main_buttons_width"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/custom_background"
        android:id="@+id/done_btn_forgot_password2_xml"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"/>




</RelativeLayout>