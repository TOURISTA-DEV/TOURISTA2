<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    tools:context="com.example.rehan.tourista.Activities.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@id/imageView"
        android:src="@drawable/logoblue"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be a travel agent!"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_below="@id/imageView"
        android:textColor="@color/colorPrimary"
        android:shadowColor="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/colorPrimary"
        android:text="Register yourself as a travel agent to post your packages and get tourists. Please visit our office and bring following documents with you!"
        android:inputType="textMultiLine"
        android:layout_below="@+id/name2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNIC:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/textInputLayout"
        android:layout_toStartOf="@+id/name2" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="21dp"
        android:id="@+id/textInputLayout">

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/editText3"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:hint="31303-6342787-6"
        android:textStyle= "bold"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/textInputLayout"
        android:textSize="20dp"
        android:layout_marginRight="20dp"

        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="LiscenceNumber:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/textView" />



    <TextView
        android:id="@+id/editText2"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:hint="56432675A   "
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginStart="20dp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:textStyle= "bold"
        android:textSize="20dp"

        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/main_buttons_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="19dp"
        android:text="Visit our Website"
        android:background="@drawable/custom_background_blue"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"/>


</RelativeLayout>
