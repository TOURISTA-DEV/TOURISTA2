<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    tools:context="com.example.rehan.tourista.MainActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/mp1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/placeholder"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        />


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/mp1"
        android:layout_marginLeft="30dp"
        android:text="Tourista Tours"
        android:textColor="#0d0c0c"
        android:textSize="20dp"
        />
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mp1"
        android:layout_marginTop="20dp"
        android:background="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="From:                        Lahore to Karachi"
        android:layout_below="@id/v1"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Duration:                 1/12/2018 --- 10/12/2018"
        android:layout_below="@id/t2"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Price:                        PKR--12000/-"
        android:layout_below="@id/t3"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Staypoints:            Multan--Bahawalpur--Rahimyar\n                                  Khan"
        android:layout_below="@id/t4"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Accomodation:     50 Passengers"
        android:layout_below="@id/t5"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Contact No:            0312-1299002"
        android:layout_below="@id/t6"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/t8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="FacebookID:           12DC66790"
        android:layout_below="@id/t7"
        android:textColor="#0d0c0c"
        android:textSize="15dp"
        />
</RelativeLayout>
