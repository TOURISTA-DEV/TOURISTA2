<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rehan.tourista.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@id/imageView"
        android:src="@drawable/logoblue"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WE TEAM TOURISTA!"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:shadowColor="@color/colorPrimary"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/colorPrimary"
        android:text="are providing you with the best of us considering all the issues that you may face in your journey. Hope you'll like it, just because it's not a usual app, this is an all in one app, where you'll find everything that you may like to be known being as a tourist or travelling somewhere. Enjoy our app! "
        android:inputType="textMultiLine"
        android:textSize="20dp"
        android:textAlignment="center"
        />


</RelativeLayout>
