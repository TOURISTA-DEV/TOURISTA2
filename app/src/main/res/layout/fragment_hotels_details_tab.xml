<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rehan.tourista.Activities.HotelsActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:src="@drawable/b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"

            />


        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="30dp"
            android:text="Green View hotel"
            android:textColor="#0d0c0c"
            android:textSize="20dp"
            />
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/img"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:text="Location:                                   25-A, Lower Mall, Lahore."
            android:layout_below="@id/v1"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Total Rooms:                             50"
            android:layout_below="@id/t2"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Room Types:                              Average/Luxury"
            android:layout_below="@id/t3"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Average/Luxury Capacity:        3-5 beds      "
            android:layout_below="@id/t4"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Average Room/Day:                 PKR-2000/-"
            android:layout_below="@id/t5"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Luxury Room/Day:                    PKR-3500/-"
            android:layout_below="@id/t6"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Contact:                                     0213-7645987"
            android:layout_below="@id/t7"
            android:textColor="#0d0c0c"
            android:textSize="15dp"
            />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
