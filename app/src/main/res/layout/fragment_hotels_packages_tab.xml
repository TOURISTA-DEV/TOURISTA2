                    card_view:cardCornerRadius="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/card5"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:id="@+id/t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="10-Days Package"
                        android:textColor="#ffff"
                        android:textSize="25dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/div"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Rooms:                                7"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_marginTop="60dp"
                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Luxury Rooms:                                   5"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_marginTop="80dp"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meals/Day:                                          2"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_marginTop="100dp"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Charges:                            PKR-60,000"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_marginTop="120dp"
                        />



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card7"
                    android:layout_height="5dp"
                    android:layout_width="match_parent"
                    card_view:cardCornerRadius="0dp"
                    android:layout_below="@+id/card6"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="60dp"
                    card_view:cardBackgroundColor="@color/cardview_shadow_start_color">
                </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>