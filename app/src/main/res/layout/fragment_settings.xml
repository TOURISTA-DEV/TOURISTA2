<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rehan.tourista.Activities.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/textview_feedback_xml"
                android:text="Please rate your\n experience with us "
                android:textColor="#100b0b"
                android:textSize="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <RatingBar
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_feedback_xml"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/textview1_feedback_xml"
                android:text="Please give us\n your feedback "
                android:textColor="#100b0b"
                android:textSize="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/rate" />

            <EditText
                android:layout_marginTop="30dp"
                android:hint="Type here"
                android:textColorHint="#100b0b"
                android:textSize="20dp"
                android:id="@+id/edittext1_feedback_xml"
                android:layout_below="@id/textview1_feedback_xml"
                android:layout_width="3400dp"
                android:background="#d6d3d3"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:gravity="start"
                />
            <Button
                android:id="@+id/submit_rate_us_xml"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:textColor="#FFFF"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/edittext1_feedback_xml"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"

                />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Later"
                android:textColor="#FFFF"
                android:background="@color/colorPrimaryDark"
                android:layout_marginRight="0dp"
                android:layout_alignBaseline="@+id/submit_rate_us_xml"
                android:layout_alignBottom="@+id/submit_rate_us_xml"
                android:layout_alignEnd="@+id/edittext1_feedback_xml"
                />
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
