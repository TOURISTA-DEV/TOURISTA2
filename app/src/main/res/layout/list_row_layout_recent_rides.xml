<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#d2d4ec"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/trip_no_list_row_layout_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip No Goes Here"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#761e1e"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="From"
            android:id="@+id/from"
            android:layout_below="@+id/trip_no_list_row_layout_xml"
            />
        <TextView
            android:id="@+id/pickup_list_row_layout_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick-Up"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:layout_below="@+id/from"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="To"
            android:id="@+id/to"
            android:layout_below="@+id/pickup_list_row_layout_xml"
            />
        <TextView
            android:id="@+id/dropoff_list_row_layout_xml"
            android:layout_below="@id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop-Off"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            />
    </RelativeLayout>

</RelativeLayout>